{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "outDir": "dist",
    "moduleResolution": "Node",
    "strict": true,

    "lib": ["DOM", "ES2020"],  
    "types": ["chrome"],       
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
